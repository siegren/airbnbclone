<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, id: :room_name , class: 'form-control', placeholder: 'Room Title' %>
  </div>

  <div class="field">
    <%= form.text_area :description, id: :room_description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.text_field :location, id: :room_location, class: 'form-control', placeholder: 'Location' %>
  </div>

  <div class="field">
      <%= form.text_field :price, id: :room_price, class: 'form-control', placeholder: 'Price' %>
  </div>

  <div class="field" style="display:none">
    <%= form.number_field :user_id, id: :room_user_id, value: current_user.id %>
  </div>

       <div class="form-group field">
        <%= form.label :picture, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6 field">
            <%= form.file_field :picture %>
        </div>
    </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'form-control btn-success' %>
  </div>
<% end %>

